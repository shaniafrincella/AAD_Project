<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    android:padding="@dimen/layout_activity_padding"
    tools:context=".Splash">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_splash"
        app:srcCompat="@drawable/restaurant_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerInParent="true"
        android:fontFamily="@font/muli_black"
        android:text="Restaurant Finder"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/splash_text_size" />
</RelativeLayout>